@model IEnumerable<Entities.Car>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>List of all cars</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Ajax.BeginForm("GetCarList", "Car", null, new AjaxOptions { UpdateTargetId = "results" }, new { @class = "navbar-form navbar-left" }))
{
    <div class="form-group">
        @Html.TextBox("search", null, new { @class = "form-control", @placeholder = "Search Car" })
    </div>
    @:|
    <div class="checkbox">
        @Html.CheckBox("showArchive", false) Show archive cars
    </div>
    @:|
    <button type="submit" class="btn btn-default">Submit</button>
}

<div id="results">
    @Html.Action("GetCarList")
</div>
