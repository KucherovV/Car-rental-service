@model CarRent.ViewModels.OrderCreateViewModel
@{
    ViewBag.Title = "RentForm";
    <link href="~/Content/RentFormStyleSheet.css" rel="stylesheet" />
}

<div class="container">
    <div class="row">
        <h2 class="col-md-offset-4">Rent a Car</h2>
        <hr />

        <div class="col-md-3 col-md-offset-1">
            @using (Ajax.BeginForm("RentForm", "User", new AjaxOptions() { UpdateTargetId = "results"}))
            {
                <div id="results">
                    @Html.Action("GetForm", new { viewModel = Model})
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Rent this car" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>

        <div class="col-md-5  col-md-offset-1">
            <h3>@Model.Car.BrandModel</h3>
            <img src="@Url.Content(Constants.ProductImagePath + Model.Car.FileName)" width="450px" />

            <table class="pricing">
                <tr>
                    <td><b>Days</b></td>
                    <td>30+</td>
                    <td>30-15</td>
                    <td>14-8</td>
                    <td>7-4</td>
                    <td>3-2</td>
                    <td>1</td>
                </tr>
                <tr>
                    <td><b>Price</b></td>
                    <td>@Model.CarTimePricing.PricePerMoreThanMonth$</td>
                    <td>@Model.CarTimePricing.PricePerMonth$</td>
                    <td>@Model.CarTimePricing.PricePer14Days$</td>
                    <td>@Model.CarTimePricing.PricePer7Days$</td>
                    <td>@Model.CarTimePricing.PricePer3Days$</td>
                    <td>@Model.CarTimePricing.PricePer1Day$</td>
                </tr>
            </table>

            <p class="rentTime h4"></p>
            <p class="price h4"></p>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

